<div class="row">
  <div class="col-sm-9">
    <h1>新着あるある</h1>
    <%= render 'posts/posts_top', posts: @posts1 %>
    <h4 class="text-right mt-2"><%= link_to 'もっと見る→', 'posts/search?utf8=✓&search%5Bcategory_id%5D=&sort=new&search%5Btext%5D=&commit=検索' %></h4>
    <h1>人気あるある</h1>
    <%= render 'posts/posts_top', posts: @posts2 %>
    <h4 class="text-right mt-2 mb-5"><%= link_to 'もっと見る→', 'posts/search?utf8=✓&search%5Bcategory_id%5D=&sort=popular&search%5Btext%5D=&commit=検索' %></h4>
  </div>
  <div class="col-sm-3">
    <br>
    <br>
    <br>
   <%= link_to 'あるあるを投稿', new_post_path, class: 'btn btn-lg btn-secondary btn-block mt-3 mb-5' %>
   <h1>カテゴリ</h1>
   <ul>
     <% @categories.each do |category| %>
     <li><h5><%= link_to category.type, '/posts/search?utf8=✓&search%5Bcategory_id%5D=' +  category.id.to_s + '&sort=new&search%5Btext%5D=&commit=検索' %></h5></li>
     <% end %>
   </ul>
  </div>
</div>

