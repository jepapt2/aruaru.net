<% posts.each do |post| %>
<div class="card">
  <div class="media-header bg-cream">
    <h5><%= link_to post.title, post_path(post) %></h5>
  </div>  
  <div class="card-body">
    <%= post.content %>
  </div>
  <div class="card-footer bg-white">
      <%= render 'favorites/like_button', post: post %>カテゴリー：<%= link_to post.category.type, '/posts/search?utf8=✓&search%5Bcategory_id%5D=' +  post.category.id.to_s + '&sort=id+desc&search%5Btext%5D=&commit=検索'%>
  </div>
</div>
<% end %>
<%= paginate posts %>